{
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ],
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts"
  ]
}
